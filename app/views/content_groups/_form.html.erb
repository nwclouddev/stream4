<%= form_with(model: content_group) do |form| %>
  <% if content_group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(content_group.errors.count, "error") %> prohibited this content_group from being saved:</h2>

      <ul>
      <% content_group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

  <div class="mb-3">
    <%= form.label :description, class: 'form-label' %>
      <%= form.text_field :description, class: 'form-control' %>
    </div>

  <div class="mb-3">
    <% if content_group.persisted? %>
      <div class="float-end">
        <%= link_to 'Destroy', content_group, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if content_group.persisted? %>
      <%= link_to "Cancel", content_group, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", content_groups_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
