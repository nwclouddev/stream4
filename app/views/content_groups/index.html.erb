


<div class="row">
  <div class="col-sm-6">
    <h1>Content Groups</h1>
  </div>

  <div class="col-sm-6 text-end">
  <%= link_to new_content_group_path, class: 'btn btn-primary' do %>
    Add New Content Group
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    
        <th>Name</th>
    

            <th>Description</th>
            
      </tr>
    </thead>

    <tbody>
      <% @content_groups.each do |content_group| %>
        <%= content_tag :tr, id: dom_id(content_group), class: dom_class(content_group) do %>
          
            <td><%= link_to content_group.name, content_group %></td>
          

                      <td><%= content_group.description %></td>
          
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
