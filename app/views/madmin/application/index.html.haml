.md:flex.justify-between.items-center.space-y-4.md:space-y-0
  %h1.text-xl.font-semibold= resource.friendly_name.pluralize
  .flex-grow.flex.md:justify-end.gap-4
    %form.flex.items-center.gap-2.relative
      = hidden_field_tag :page, params[:page], value: 1, class: "hidden"
      = search_field_tag :q, params[:q], placeholder: "Search", class: "rounded-full px-4 focus:bg-white focus:border-indigo-500"
      = link_to clear_search_params, class: "absolute top-1/2 right-3 text-gray-500 bg-white transform -translate-y-1/2" do
        %svg.h-5.w-5{:fill => "currentColor", :viewbox => "0 0 20 20", :xmlns => "http://www.w3.org/2000/svg"}
          %path{"clip-rule" => "evenodd", :d => "M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z", "fill-rule" => "evenodd"}
    = link_to resource.new_path, class: "bg-white hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 border border-gray-400 rounded shadow" do
      New
      %span.hidden.md:inline= resource.friendly_name
.mb-4
  - if resource.scopes.any?
    = link_to "All", resource.index_path, class: class_names("p-2 rounded", {"bg-gray-100" =>  params[:scope].blank?})
  - resource.scopes.each do |scope|
    = link_to scope.to_s.humanize, resource.index_path(scope: scope), class: class_names("p-2 rounded", {"bg-gray-100" => params[:scope] == scope.to_s})
.min-w-full.max-w-xl.overflow-x-auto.pb-4
  %table.min-w-full.divide-y.divide-gray-200
    %thead
      %tr.border-b.border-gray-200
        - resource.attributes.values.each do |attribute|
          - next if attribute.field.nil?
          - next unless attribute.field.visible?(action_name)
          %th.py-2.px-4.text-left.text-xs.text-gray-500.font-medium.uppercase.whitespace-nowrap= sortable attribute.name, attribute.name.to_s.titleize
        %th.py-2.px-4.text-left.text-xs.text-gray-500.font-medium.uppercase Actions
    %tbody.text-sm.divide-y
      - @records.each do |record|
        %tr
          - resource.attributes.values.each do |attribute|
            - next if attribute.field.nil?
            - next unless attribute.field.visible?(action_name)
            %td.px-4.py-2= render partial: attribute.field.to_partial_path("index"), locals: { field: attribute.field, record: record, resource: resource }
          %td.px-4.py-2.text-center
            = link_to "View", resource.show_path(record), class: "text-indigo-500"
            = link_to "Edit", resource.edit_path(record), class: "text-indigo-500"
!= render(partial: 'madmin/pagy/nav', locals: { pagy: @pagy }) if @pagy.pages > 1
